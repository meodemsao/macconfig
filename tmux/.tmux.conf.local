# -- clipboard ----------------------------------------------------------------

# clipboard integration (macOS uses pbcopy)
tmux_conf_copy_to_os_clipboard=true

# -- user customizations -------------------------------------------------------

# increase history size
set -g history-limit 50000

# start with mouse mode enabled
set -g mouse on

# aggressive resize - resize window to the size of the smallest client ONLY if 
# that client is actively looking at it (fixes status bar position issues)
setw -g aggressive-resize on

# force Vi mode
set -g status-keys vi
set -g mode-keys vi

# replace C-b by C-a (already done by oh-my-tmux, but ensure it)
# set -g prefix2 C-a
# bind C-a send-prefix -2

# move status line to bottom
set -g status-position bottom

# faster command sequences
set -s escape-time 10

# -- tpm plugins ---------------------------------------------------------------

# tmux-resurrect - save/restore sessions
set -g @plugin 'tmux-plugins/tmux-resurrect'

# tmux-continuum - automatic session save
set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @continuum-restore 'on'
set -g @continuum-save-interval '15'

# -- custom key bindings -------------------------------------------------------

# split current window horizontally
bind - split-window -v -c "#{pane_current_path}"

# split current window vertically  
bind | split-window -h -c "#{pane_current_path}"

